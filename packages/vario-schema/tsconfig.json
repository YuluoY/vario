{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@variojs/types": ["../vario-types/src/index.ts"],
      "@variojs/core": ["../vario-core/src/index.ts"]
    },
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
