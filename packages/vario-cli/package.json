{
  "name": "@variojs/cli",
  "version": "0.1.1",
  "description": "Vario CLI Tools - Development server, code generation, and build tools",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@variojs/core": "workspace:*",
    "@variojs/schema": "workspace:*",
    "@variojs/vue": "workspace:*",
    "commander": "^11.1.0"
  },
  "bin": {
    "vario": "./bin/vario.mjs"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}