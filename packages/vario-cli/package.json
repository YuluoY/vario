{
  "name": "@vario/cli",
  "version": "0.1.0",
  "description": "Vario CLI Tools - Development server, code generation, and build tools",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@vario/core": "workspace:*",
    "@vario/schema": "workspace:*",
    "@vario/vue": "workspace:*",
    "commander": "^11.1.0"
  },
  "bin": {
    "vario": "./dist/index.js"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}